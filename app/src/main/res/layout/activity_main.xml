<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/homeButton"
        android:layout_width="143dp"
        android:layout_height="66dp"
        android:layout_marginTop="668dp"
        android:backgroundTint="#880808"
        android:text="Home"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/addRecipeButton"
        android:layout_width="136dp"
        android:layout_height="66dp"
        android:background="#880808"
        app:srcCompat="@android:drawable/ic_menu_add"
        tools:layout_editor_absoluteX="143dp"
        tools:layout_editor_absoluteY="668dp" />

    <ImageButton
        android:id="@+id/profileButton"
        android:layout_width="94dp"
        android:layout_height="67dp"
        android:background="#880808"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_launcher_foreground"
        tools:layout_editor_absoluteX="317dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="317dp"
        android:layout_height="67dp"
        android:background="#880808"
        android:text="RecipeTok"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/discoverButton"
        android:layout_width="134dp"
        android:layout_height="64dp"
        android:background="#880808"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/addRecipeButton"
        app:srcCompat="@android:drawable/ic_search_category_default"
        />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="187dp"
        android:layout_height="61dp"
        android:layout_marginTop="72dp"
        android:text="Welcome User!"
        android:textColor="#880808"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView" />


</androidx.constraintlayout.widget.ConstraintLayout>