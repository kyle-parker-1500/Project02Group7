    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titleRecipeReyclerTextView"
        android:text="HELLO"
        android:layout_margin="8dp"
        android:padding="2dp"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ingredientsRecipeRecyclerTextView"
        android:text="HELLO"
        android:layout_margin="8dp"
        android:padding="2dp"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/instructionsRecipeRecyclerTextView"
